extends layouts/main

block about
	div.about
		div.clearfix.wrapper
			div.introduction
				p
					| MooTools are JavaScript libraries designed for the intermediate to advanced JavaScript developer. They allows you to write powerful and flexible code with its elegant, well documented, and coherent APIs.
				p
					| MooTools code it's extensively documented and has meaningful variable names: a joy to browse and a snap to understand.

			div.license
				h2
					| Open Source License
				p
					space = ""
					| MooTools libraries are released under the #{space}
					a(href='http://opensource.org/licenses/MIT')
						| Open Source MIT license
					|  which gives you the possibility to use them and modify them in every circumstance.


block updates
	div.updates
		div.clearfix.wrapper
			section
				div.box
					h3 Blog Entries
					h4
						strong: a(href="/blog/#{lastBlogPost.permalink}") #{lastBlogPost.title}
					p !{lastBlogPost.summary.slice(0, 240)}...

			section.box
				div.box
					h3 GitHub Activity
					include ./partials/GitHubEvents
					mixin GitHubEvents(githubEvents, 5)

			section.box
				div.box
					h3 Latest Tweets
					if (tweetFeed) 
						for tweet in tweetFeed
							p: a(href="https://twitter.com/mootools/status/#{tweet.id_str}") #{tweet.text}

block main

	block about
	
	hr

	block updates

.demos
	div.tabcontent
		margin 0
		.tabs
			width 100%
			height 100%
			display none
			&.selected
				display block !important
				background-color #fff
		#runner
			background-color #fff
			h2
				color #fff !important
			h3
				background-color #fff
				border-radius: 5px;
				border: solid #dedfdf 1px;
				font-weight: 400;
				margin: 1.5em 0 0;
				padding: 0.15em 0.5em 0.25em;
			a
				padding 0 0.3em
				margin-top 0.2em
			.details
				float left
				clear: both
				width 100%

.demoTabs
	form
		textarea
			display none

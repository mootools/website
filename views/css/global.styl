	src: url("/fonts/entypo-social.eot?#iefix") format("embedded-opentype"),
		url("/fonts/entypo-social.woff") format("woff"),
		url("/fonts/entypo-social.ttf") format("truetype"),
		url("/fonts/entypo-social.svg#entypo-social") format("svg");
	font-weight: normal;

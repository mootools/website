
.builder

	margin-top: 2em
	margin-bottom: 2em

	.header
		h1
			float: left
			margin: 1.5em 0em 0.5em
			width 100%

		.save
			float left
			clear none
			margin-right 1em

	.save
		clear: both

		label
			display block
			margin-top: 1em
			position: relative

		input[type="checkbox"]
			margin-right: 0.5em
			vertical-align: bottom;

		input[type="submit"]
			margin-top: 0.5em
			padding: 0.5em
			width: 100%
			text-align: left

		.icon.download
			position: absolute
			right: 0.25em
			top: 0
			line-height: 1em

	form
		margin-top: 1em

	.step
		clear: both
		font-weight: 400
		margin-top: 1em


@media only screen and (min-width: 48em) /* More or equal to 768 pixels */

	.builder
		.save
			width 35%

		table
			width 100%

			tr
				border-bottom 1px solid #acaaa7
				td
					padding .3em

					&:first-child
						width 5%
					& + td
						width 15%
					& + td + td
						width 20%
					& + td + td +td
						width 60%

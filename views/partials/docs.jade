mixin doc-versions(versions, path)
	div.versions.clearfix
		h3
			| Versions
		ul
			each ver in versions
				li
					if version == ver
						a(href="#{path}#{ver}", class='selected')
							| #{ver}
					else
						a(href="#{path}#{ver}")
							| #{ver}

mixin docs(content, versions, path)
	.docs.overview.clearfix.wrapper
		doc-versions(versions, path)

		div.toc
			include ./docs/toc
		div.content
			| !{content}

